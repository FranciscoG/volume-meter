block vars
  - var bodyAttributes = { "id": "index"}

extends layout

block content
  .page.record
    h1 Volume Arc Meter

    p Audio API volume: <span id="apiVol"></span>
    p.
      Arbitrary Volume number: <span id="vol">0</span>
      <span class="calc">API volume * 1000 (rounded up)</span>

    span#begin.button Click here to begin

    p#countdown 0

    canvas#meter(width="300", height="300").
      Sorry your browser does not support HTML5 canvas
    p#liveScore 0

    span#stop.button Stop
    a#save.button(href="#") Save Audio

  .page.info
    h1 enter your info

    form#details
      .input-group
        label(for="name") name
        input#name(type="text",name="name")

      .input-group
        label(for="email") email
        input#email(type="text",name="email")

      input#hdnScore(type="hidden", name="score")
      input#submitter(type="submit")
  
  .page.leaderboard
    include inc/_share.jade
    include inc/_leader.jade